<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>3. Results Pickup</h:title>
    <model>
      <instance>
        <rdepart id="rdepart" version="20160229">
          <start/>
          <end/>
          <deviceid/>
          <simserial/>
          <person/>
          <region/>
          <facility/>
          <srepeat jr:template="">
            <stid/>
          </srepeat>
          <store_gps/>
          <meta>
            <instanceID/>
          </meta>
        </rdepart>
      </instance>
      <bind jr:preload="timestamp" jr:preloadParams="start" nodeset="/rdepart/start" type="dateTime"/>
      <bind jr:preload="timestamp" jr:preloadParams="end" nodeset="/rdepart/end" type="dateTime"/>
      <bind jr:preload="property" jr:preloadParams="deviceid" nodeset="/rdepart/deviceid" type="string"/>
      <bind jr:preload="property" jr:preloadParams="simserial" nodeset="/rdepart/simserial" type="string"/>
      <bind nodeset="/rdepart/person" required="true()" type="select1"/>
      <bind nodeset="/rdepart/region" required="true()" type="select1"/>
      <bind nodeset="/rdepart/facility" required="true()" type="select1"/>
      <bind nodeset="/rdepart/srepeat/stid" required="true()" type="barcode"/>
      <bind nodeset="/rdepart/store_gps" type="geopoint"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/rdepart/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <select1 appearance="quick search('riders')" ref="/rdepart/person">
      <label>Rider Name</label>
      <item>
        <label>rider</label>
        <value>rider_key</value>
      </item>
    </select1>
    <select1 appearance="quick search('regions')" ref="/rdepart/region">
      <label>Region</label>
      <item>
        <label>region</label>
        <value>region_key</value>
      </item>
    </select1>
    <select1 appearance="quick search('facilities', 'matches', 'region',  /rdepart/region )" ref="/rdepart/facility">
      <label>Facility</label>
      <item>
        <label>facility</label>
        <value>facility_key</value>
      </item>
    </select1>
    <group ref="/rdepart/srepeat">
      <label>New Scan</label>
      <repeat nodeset="/rdepart/srepeat">
        <input ref="/rdepart/srepeat/stid">
          <label>STT Barcode</label>
        </input>
      </repeat>
    </group>
    <input ref="/rdepart/store_gps">
      <label>GPS Coordinates</label>
      <hint>GPS coordinates can only be collected when outside.</hint>
    </input>
  </h:body>
</h:html>
